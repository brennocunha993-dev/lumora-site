<%- include('../partials/header', { title: 'Jogos' }) %>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2 text-primary">
                <i class="fas fa-gamepad me-2"></i>Biblioteca de Jogos
            </h1>
        </div>
        <div class="col-md-4 text-end">
            <% if (user) { %>
                <a href="/games/submit/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Publicar Jogo
                </a>
            <% } %>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body">
            <form method="GET" action="/games">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" name="search" class="form-control bg-dark text-light border-secondary" 
                               placeholder="Buscar jogos..." value="<%= query.search || '' %>">
                    </div>
                    <div class="col-md-3">
                        <select name="genre" class="form-select bg-dark text-light border-secondary">
                            <option value="">Todos os Gêneros</option>
                            <option value="acao" <%= query.genre === 'acao' ? 'selected' : '' %>>Ação</option>
                            <option value="aventura" <%= query.genre === 'aventura' ? 'selected' : '' %>>Aventura</option>
                            <option value="rpg" <%= query.genre === 'rpg' ? 'selected' : '' %>>RPG</option>
                            <option value="estrategia" <%= query.genre === 'estrategia' ? 'selected' : '' %>>Estratégia</option>
                            <option value="puzzle" <%= query.genre === 'puzzle' ? 'selected' : '' %>>Puzzle</option>
                            <option value="corrida" <%= query.genre === 'corrida' ? 'selected' : '' %>>Corrida</option>
                            <option value="esporte" <%= query.genre === 'esporte' ? 'selected' : '' %>>Esporte</option>
                            <option value="tiro" <%= query.genre === 'tiro' ? 'selected' : '' %>>Tiro</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select name="sort" class="form-select bg-dark text-light border-secondary">
                            <option value="newest" <%= query.sort === 'newest' ? 'selected' : '' %>>Mais Recentes</option>
                            <option value="rating" <%= query.sort === 'rating' ? 'selected' : '' %>>Melhor Avaliados</option>
                            <option value="downloads" <%= query.sort === 'downloads' ? 'selected' : '' %>>Mais Baixados</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Jogos -->
    <% if (games && games.length > 0) { %>
        <div class="row">
            <% games.forEach(game => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card bg-dark border-secondary h-100 game-card">
                        <% if (game.images && game.images.length > 0) { %>
                            <img src="<%= game.images[0] %>" class="card-img-top" alt="<%= game.title %>" 
                                 style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
                                 style="height: 200px;">
                                <i class="fas fa-gamepad fa-3x text-muted"></i>
                            </div>
                        <% } %>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-light"><%= game.title %></h5>
                            <p class="card-text text-muted small flex-grow-1">
                                <%= game.description ? (game.description.length > 100 ? game.description.substring(0, 100) + '...' : game.description) : 'Sem descrição' %>
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary"><%= game.genre || 'Sem categoria' %></span>
                                <div class="text-warning">
                                    <% if (game.rating) { %>
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star<%= i <= Math.round(game.rating) ? '' : '-o' %>"></i>
                                        <% } %>
                                        <small class="text-muted">(<%= game.rating.toFixed(1) %>)</small>
                                    <% } else { %>
                                        <small class="text-muted">Sem avaliações</small>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">
                                    Por: <%= game.submittedBy ? game.submittedBy.username : 'Anônimo' %>
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-download me-1"></i><%= game.downloads || 0 %>
                                    <i class="fas fa-eye ms-2 me-1"></i><%= game.views || 0 %>
                                </small>
                            </div>
                            
                            <a href="/games/<%= game._id %>" class="btn btn-primary mt-auto">
                                Ver Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Paginação -->
        <% if (totalPages > 1) { %>
            <nav aria-label="Navegação de páginas">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link bg-dark text-light border-secondary" 
                               href="?page=<%= currentPage - 1 %><%= Object.keys(query).map(key => key !== 'page' ? '&' + key + '=' + encodeURIComponent(query[key]) : '').join('') %>">
                                Anterior
                            </a>
                        </li>
                    <% } %>
                    
                    <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link <%= i === currentPage ? 'bg-primary border-primary' : 'bg-dark text-light border-secondary' %>" 
                               href="?page=<%= i %><%= Object.keys(query).map(key => key !== 'page' ? '&' + key + '=' + encodeURIComponent(query[key]) : '').join('') %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link bg-dark text-light border-secondary" 
                               href="?page=<%= currentPage + 1 %><%= Object.keys(query).map(key => key !== 'page' ? '&' + key + '=' + encodeURIComponent(query[key]) : '').join('') %>">
                                Próxima
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-gamepad fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Nenhum jogo encontrado</h3>
            <p class="text-muted">Tente ajustar os filtros ou seja o primeiro a publicar um jogo!</p>
            <% if (user) { %>
                <a href="/games/submit/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Publicar Jogo
                </a>
            <% } %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>

<style>
.game-card {
    transition: transform 0.2s ease-in-out;
}

.game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
}

.pagination .page-link:hover {
    background-color: #495057 !important;
    border-color: #6c757d !important;
}
</style>