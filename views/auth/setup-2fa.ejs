<%- include('../partials/header', { title: 'Configurar 2FA' }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                        <h2 class="card-title">Configurar Autenticação 2FA</h2>
                        <p class="text-muted">Adicione uma camada extra de segurança à sua conta</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 text-center">
                            <h5 class="mb-3">1. Escaneie o QR Code</h5>
                            <img src="<%= qrCode %>" alt="QR Code 2FA" class="img-fluid mb-3" 
                                 style="max-width: 200px;">
                            <p class="small text-muted">
                                Use um app como Google Authenticator ou Authy
                            </p>
                        </div>
                        
                        <div class="col-md-6">
                            <h5 class="mb-3">2. Digite o código</h5>
                            <form id="confirm2fa">
                                <input type="hidden" id="secret" value="<%= secret %>">
                                
                                <div class="mb-3">
                                    <label for="token" class="form-label">Código de 6 dígitos</label>
                                    <input type="text" class="form-control bg-dark text-light border-secondary text-center" 
                                           id="token" name="token" maxlength="6" required 
                                           style="font-size: 1.5rem; letter-spacing: 0.5rem;">
                                </div>

                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-check me-2"></i>Ativar 2FA
                                </button>
                            </form>

                            <div class="mt-3">
                                <h6>Chave manual:</h6>
                                <code class="text-warning small"><%= secret %></code>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Importante:</strong> Guarde esta chave em local seguro. 
                        Você precisará dela se perder acesso ao seu dispositivo.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('confirm2fa').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const secret = document.getElementById('secret').value;
    const token = document.getElementById('token').value;
    
    try {
        const response = await fetch('/auth/confirm-2fa', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ secret, token })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('2FA ativado com sucesso!');
            window.location.href = '/';
        } else {
            alert('Código inválido. Tente novamente.');
        }
    } catch (error) {
        alert('Erro ao ativar 2FA. Tente novamente.');
    }
});
</script>

<%- include('../partials/footer') %>