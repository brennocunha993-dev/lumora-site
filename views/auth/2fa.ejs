<%- include('../partials/header', { title: 'Verificação 2FA' }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                        <h2 class="card-title">Verificação 2FA</h2>
                        <p class="text-muted">Digite o código do seu app autenticador</p>
                    </div>

                    <% if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                        </div>
                    <% } %>

                    <form action="/auth/login" method="POST">
                        <input type="hidden" name="userId" value="<%= userId %>">
                        
                        <div class="mb-3">
                            <label for="token" class="form-label">Código de 6 dígitos</label>
                            <input type="text" class="form-control bg-dark text-light border-secondary text-center" 
                                   id="token" name="token" maxlength="6" required 
                                   style="font-size: 1.5rem; letter-spacing: 0.5rem;"
                                   placeholder="000000">
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-check me-2"></i>Verificar
                        </button>
                    </form>

                    <div class="text-center">
                        <a href="/auth/login" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Voltar ao Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>